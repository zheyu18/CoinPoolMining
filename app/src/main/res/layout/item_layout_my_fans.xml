<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_fans_image_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_me_placeholder"
            android:layout_gravity="center"
            app:riv_border_width="0dp"
            app:riv_corner_radius="25dp"
            app:riv_oval="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical">


            <TextView
                android:id="@+id/item_fans_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="默认文字"
                android:textColor="@color/col_normal"
                android:textSize="@dimen/ts_15sp" />
            <TextView
                android:id="@+id/item_fans_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="个性签名"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/item_fans_name"
                android:textColor="@color/col_txt_2"
                android:textSize="@dimen/ts_11sp" />


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/item_fans_add_concerned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="+关注"
        android:textSize="@dimen/ts_13sp"
        android:textColor="@color/col_white"
        android:background="@drawable/bg_unconcerned_border"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>
