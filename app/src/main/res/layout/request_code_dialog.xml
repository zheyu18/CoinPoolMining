<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_login_dialog"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_cancel"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end"
                android:layout_marginTop="17dp"
                android:layout_marginRight="27dp"
                android:src="@drawable/ic_dialog_delete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请在下方输入图形验证码"
                android:textColor="@color/col_normal"
                android:textSize="@dimen/ts_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="35dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/col_underline"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/dialog_et_code"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/hint_input_image_code"
                            android:textColor="@color/col_normal"
                            android:textSize="@dimen/ts_12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dialog_img_code"
                        android:layout_width="85dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="5dp"
                    android:text="请输入正确的验证码"
                    android:textColor="@color/col_normal"
                    android:textSize="@dimen/ts_11sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/dialog_text_commit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/btn_login"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/col_white"
                android:textSize="@dimen/ts_20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
