<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_latest_info_item"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_latest_info_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_12sp"
        android:textColor="@color/col_normal"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_dot_time"
        android:drawablePadding="5dp"/>
    <TextView
        android:id="@+id/item_latest_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="5dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/col_normal"
        android:textSize="@dimen/ts_14sp" />
</LinearLayout>